{% extends 'base.html.twig' %}

{% block title %}Adresses{% endblock %}

{% block content %}
<a href="{{path('app_add_address')}}" class="btn btn-info btn-sm float-right">Ajouter une adresse</a>
    <h1>Adresses</h1>
    <a href="{{path('app_account')}}">Reourner à mon compte</a>
    <hr>
    {% if app.user.addresses | length == 0 %}
    <p class="text-center">
        Vous n'avez pas encore ajouté d'adresse dans votre compte client. Pour en ajouter une, veuillez <a href="{{path('app_add_address')}}">cliquer ici.</a>
    </p>
    {% else %}
    <div class="row flex justify-content-center flex-wrap mb-5">
        {% for address in app.user.addresses %}
        <div class="col-md-4">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title">{{address.name}}</h5>
                  <p class="card-text">
                    {{address.address}},<br/>
                    {{address.postal}}-{{address.city}}-{{address.country}}
                </p>
                  <a href="{{path('app_address_edit', {id:address.id})}}" class="">Modifier</a>
                  | <a href="{{path('app_address_delete', {id:address.id})}}" class="">Supprimer</a>
                </div>
              </div>
        </div>
        {% endfor %}
    
    </div>
    {% endif %}

{% endblock %}
