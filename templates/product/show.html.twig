{% extends 'base.html.twig' %}

{% block title %}{{product.name}}{% endblock %}

{% block content %}
<div class="row">
    <div class="col-md-5">
        <img class="card-img-top" src="/uploads/{{product.illustration}}" alt="{{product.name}}" class="img-fluid">
    </div>
    <div class="col-md-7 my-auto">
        <h3><strong>{{product.name}}</strong></h3>
        <p>{{product.subtitle}}</p>
        <span style="font-size: larger;" >{{(product.price / 100)|number_format(2, ',', '.')}} â‚¬</span>
        <hr>
        <p>{{product.description}}</p>
        <a href="{{ path('app_add_cart', {'id':product.id}) }}" class="btn btn-primary">Ajouter au panier</a>
    </div>
</div>
{% endblock %}
