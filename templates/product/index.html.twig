{% extends 'base.html.twig' %}

{% block title %}Nos produits{% endblock %}

{% block content %}
<div class="row flex justify-content-center mb-5">
    <div class="col-md-3">
        <h2>Filtrer</h2>
            {{ form(form) }}
    </div>
    {# <div class="col-md-9"></div> #}
<div class="col-md-9">
    <h1>Nos Produits</h1>
    <hr>
    <div class="row flex justify-content-center flex-wrap mb-5">
    {% for product in products %}
        <div class="card-deck col-md-4 mt-5">
            <div class="card mb-4 border-light" style="width: 18rem;">
                <a href="{{ path('app_product_show', {'slug': product.slug}) }}">
                <img class="card-img-top" src="/uploads/{{product.illustration}}" alt="{{product.name}}"></a>
                <div class="card-body">
                  <h5 class="card-title">{{product.name}}</h5>
                  <p class="card-text">{{product.subtitle}}</p>
                  <span style="font-size: larger;" >{{(product.price / 100)|number_format(2, ',', '.')}} â‚¬</span>
                </div>
                
            </div>
        </div>
        {% endfor %}
    </div>
</div>
</div>

{% endblock %}